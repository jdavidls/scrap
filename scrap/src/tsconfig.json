{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "preserveConstEnums": true,
        "removeComments": true,
		"stripInternal": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../build",
        "rootDir": ".",
		"types": ["node"]
    },
    "buildOnSave": false,
    "compileOnSave": false
}
